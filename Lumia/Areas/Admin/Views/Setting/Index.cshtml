@model List<Setting>



    



@{
    int counter = 0;
}

    <div class="container pt-5 pb-5">
        <div class="container">

            <h1 style="text-align:center">Settings</h1>

        </div>
        <div>


        <table class="table table-striped">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Key</th>
                    <th scope="col">Value</th>
                    <th scope="col">Action</th>
                 
                </tr>
            </thead>
            <tbody>
                @foreach(var setting in Model){
                    counter++;
                    <tr>
                        <th scope="row">@counter</th>
                        <td>@setting.Key</td>
                        <td>@setting.Value</td>
                        <td><a class="btn btn-success" asp-action="update" asp-controller="setting" asp-route-id="@setting.Id" >Update</a></td>
                    </tr>
                }
                
            </tbody>
        </table>



        </div>



    </div>

        
